    "test-server": "json-server --wat  ch db.json",
    "validate-api": "dredd --level=debug",
    "convertToJunit": "node report/cucumber-junit.js",
    "sync-testrail": "node report/sync-testrail.js",
    "lint": "gherkin-lint" 
  }
