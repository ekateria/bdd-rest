{
  "name": "massive-rest-api-testing",
  "version": "1.1.0",
  "description": "Testing framework for REST API testing.",
  "dependencies": {
    "cucumber": "4.0.0",
    "chai": "4.1.2",
    "lodash": "4.17.5",
    "superagent": "3.8.2",
    "util": "0.10.3",
    "chai-subset": "1.6.0",
    "chai-string": "1.4.0",
    "js-yaml": "3.10.0",
    "args-parser": "1.1.0",
    "randomstring": "1.1.5",
    "json-server": "0.12.1",
    "dredd": "5.1.3"
  },
   "devDependencies" : {
      "cucumber-junit": "latest",
      "bamboo-api": "0.0.9",
      "testrail-api": "1.2.1",
      "cucumber-html-reporter": "4.0.2",
      "gherkin-lint": "2.8.0" 
 },
  "license": "MIT",
  "scripts": {
    "test": "gherkin-lint && cucumber-js",
    "debug": "node --nolazy --inspect-brk=9229 ./node_modules/cucumber/bin/cucumber.js",
    "report": "node report/report.js",
